{% extends "node.html.twig" %}

{% block meta %}
{% endblock %}

{% block title %}
  {% if label and page %}
    <div class="node node__header">
      <div class="node__header__bg">
      </div>
      <div class="node__header__content">
        <div class="content">
          <div class="field field-page-title">
            <h1 class="page-title">
              {{ label }}
            </h1>
          </div>
          <div class="meta">
            <span class="date">
              {{ content.field_date_range }}
            </span>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  {{ content|without('field_date', 'field_date_range') }}
{% endblock %}

