{% extends "node.html.twig" %}

{% block title %}
  {% if label and page %}
    <div class="node__header">
      <div class="field field-page-title"><h1 class="page-title">{{ label }}</h1></div>
    </div>
  {% endif %}
{% endblock %}

{% block meta %}
  {% if display_submitted %}
    <footer>
      {{ content.field_date }}
    </footer>
  {% endif %}
{% endblock %}

{% block content %}
  {{ content|without('field_date') }}
{% endblock %}
