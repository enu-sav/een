{% extends "node.html.twig" %}

{% block title %}
  {% if label and page %}
    <div class="node__header">
      <div class="field field-page-title"><h1 class="page-title">{{ label }}</h1></div>
    </div>
  {% endif %}
{% endblock %}

{% block meta %}
  <footer>
    {{ author_picture }}
  </footer>
{% endblock %}

{% block content %}
  <div class="forum-full">
    <div class="forum-full__desc">{{ content.body }}</div>
    <div class="forum-full__content">
      {{ content|without('body') }}
    </div>
  </div>
{% endblock %}
