{% extends "node.html.twig" %}

{% block meta %}
{% endblock %}

{% block title %}
  {% if label and page %}
    <div class="node node__header">
      <div class="node__header__bg">
        {{ content.field_news_image }}
      </div>
      <div class="node__header__content">
        <div class="content">
          <div class="field field-page-title">
            <h1 class="page-title">
              {{ label }}
            </h1>
          </div>
          <div class="meta">
            {{ author_picture }}
            <span class="date">
              {{ node.getCreatedTime|date("M j, Y") }}
            </span>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  {{ content|without('field_news_image') }}
{% endblock %}
