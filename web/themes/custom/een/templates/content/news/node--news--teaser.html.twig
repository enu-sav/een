{% extends "node.html.twig" %}

{% block title %}
{% endblock %}

{% block meta %}
{% endblock %}

{% block content %}
  <div class="content">
    <div class="type">{{ node.type.entity.label }}</div>
    <h3>{{ label }}</h3>
    {{ content }}
    <a href="{{ url }}" class="link" title="Read more: {{ label.0['#context'].value }}">{{ 'Read more'|t }}</a>
    <div class="date">
      {{ node.getCreatedTime|date('F j Y') }}
    </div>
  </div>
{% endblock %}
