{% extends "paragraph.html.twig" %}

{% block content %}
    <div class="hero-wrapper">
    <div class="hero-content-wrapper">
      <div class="hero-content">
        {% if content.field_subtitle.0['#context'].value %}
          <div class="sub-title">{{ content.field_subtitle.0['#context'].value|raw }}</div>
        {% endif %}
        {% if content.field_title.0['#context'].value %}
          <h1>{{ content.field_title.0['#context'].value|raw }}</h1>
        {% endif %}
        {{ content.field_text_plain }}
      </div>
    </div>
  </div>
{% endblock %}
