{% extends "paragraph.html.twig" %}

{% set heading_level = paragraph.field_heading_level.0.value %}
{% set heading_text = paragraph.field_heading.0.value %}
{% set heading_attributes = create_attribute() %}

{% if not(heading_level matches '{^h[1-6]$}') %}
  {% set heading_level = "div" %}
  {% if heading_level == 'div' %}
    {% set heading_attributes = heading_attributes.addClass('additional-title') %}
  {% endif %}
{% endif %}

{% block content %}
  <{{ heading_level }}{{ heading_attributes }}>{{ paragraph.field_heading.0.value }}</{{ heading_level }}>
{% endblock %}
