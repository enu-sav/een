{#
/**
 * @file
 * Default theme implementation for a link to a file.
 *
 * Available variables:
 * - attributes: The HTML attributes for the containing element.
 * - link: A link to the file.
 * - file_size: The size of the file.
 *
 * @see template_preprocess_file_link()
 *
 * @ingroup themeable
 */
#}
<span {{ attributes }}>
  <a href="{{ link['#url'] }}" type="{{ link['#url'].options['attributes'].type }}" title="{{ link['#title'] }}" target="_blank">{{ link['#title'] }}</a></span>
{% if file_size %}
  <span>({{ file_size }})</span>
{% endif %}
