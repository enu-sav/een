{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 9 projects with Composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/acl": "^1.1",
        "drupal/admin_local_tasks": "^1.1",
        "drupal/admin_toolbar": "^3.4",
        "drupal/advpoll": "^1.2",
        "drupal/antibot": "^2.0",
        "drupal/config_ignore": "^3.2",
        "drupal/content_moderation_notifications": "^3.6",
        "drupal/content_moderation_owner_permissions": "^1.0@alpha",
        "drupal/core": "10.1.7",
        "drupal/core-composer-scaffold": "^10",
        "drupal/core-recommended": "^10",
        "drupal/diff": "^1.1",
        "drupal/environment_indicator": "^4.0",
        "drupal/forum_access": "1.x-dev@dev",
        "drupal/forum_notifications_subscription": "^1.0@alpha",
        "drupal/gin": "^3.0@RC",
        "drupal/gin_toolbar": "^1.0@RC",
        "drupal/layout_options": "^1.5",
        "drupal/layout_paragraphs": "^2.0",
        "drupal/mailsystem": "^4.4",
        "drupal/media_library_form_element": "^2.0",
        "drupal/menu_per_role": "^1.6",
        "drupal/metatag": "^2.0",
        "drupal/mimemail": "^1.0@alpha",
        "drupal/paragraphs": "^1.17",
        "drupal/paragraphs_ee": "^10.0",
        "drupal/pathauto": "^1.12",
        "drupal/phpmailer_smtp": "^2.2",
        "drupal/poll": "^1.6",
        "drupal/rdf": "^2.1",
        "drupal/recreate_block_content": "^3.0",
        "drupal/reroute_email": "^2.2",
        "drupal/simple_sitemap": "^4.1",
        "drupal/svg_image": "^3.0",
        "drupal/token": "^1.13",
        "drupal/twig_tweak": "^3.2",
        "drupal/upgrade_status": "^4.0",
        "drupal/viewsreference": "^2.0@beta",
        "drupal/workbench": "^1.4",
        "drupal/workbench_access": "^2.0",
        "drupal/workbench_moderation": "^1.7",
        "drupal/wpf": "^1.1",
        "drush/drush": "^12.4",
        "mglaman/composer-drupal-lenient": "^1.0",
        "vlucas/phpdotenv": "^5.6",
        "webflo/drupal-finder": "^1.2"
    },
    "require-dev": {
        "drupal/core-dev": "^10"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "discard-changes": true,
        "sort-packages": true,
        "platform-check": false,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "mglaman/composer-drupal-lenient": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/robots.txt": false,
                "[web-root]/.htaccess": false
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "drupal-lenient": {
            "allowed-list": ["drupal/advpoll", "drupal/acl", "drupal/forum_access"]
        },
        "patches": {
            "drupal/poll": {
                "3007808 - Fine grain control over results display": "https://www.drupal.org/files/issues/2021-05-06/display_results_option--3007808-8.patch"
            },
            "drupal/advpoll": {
                "3296549 - Automated Drupal 10 compatibility fixes": "https://www.drupal.org/files/issues/2023-04-20/advpoll.1.x-dev-3296549%233.patch"
            },
            "drupal/acl": {
                "3407173 - Automated Drupal 10 compatibility fixes": "https://www.drupal.org/files/issues/2023-12-09/acl.8.x-1.1.rector.patch"
            },
            "drupal/forum_access": {
                "3354309 - Cannot install in Drupal 10": "https://www.drupal.org/files/issues/2023-12-22/issue-3410468-drupal-10-compatibility-fixes.patch",
                "3333087 - Forum access table template breaks on Drupal 10": "https://www.drupal.org/files/issues/2023-06-29/forum_access-3333087-table-template-breaks-10.patch"
            }
        }
    }
}
