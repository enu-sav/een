{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 9 projects with Composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/adminimal_admin_toolbar": "^1.11",
        "drupal/advpoll": "^1.2",
        "drupal/antibot": "^2.0",
        "drupal/config_ignore": "^2.3",
        "drupal/content_moderation_owner_permissions": "^1.0@alpha",
        "drupal/core": "^9.4",
        "drupal/core-composer-scaffold": "^9.4",
        "drupal/core-recommended": "^9.4",
        "drupal/diff": "^1.1",
        "drupal/forum_access": "^1.0@beta",
        "drupal/forum_notifications_subscription": "^1.0@alpha",
        "drupal/gin": "^3.0@beta",
        "drupal/gin_toolbar": "^1.0@beta",
        "drupal/mailsystem": "^4.4",
        "drupal/metatag": "^1.22",
        "drupal/mimemail": "^1.0@alpha",
        "drupal/pathauto": "^1.11",
        "drupal/phpmailer_smtp": "^2.1",
        "drupal/poll": "^1.5",
        "drupal/recreate_block_content": "^2.1",
        "drupal/reroute_email": "^2.1",
        "drupal/simple_sitemap": "^4.1",
        "drupal/workbench": "^1.4",
        "drupal/workbench_access": "^1.1",
        "drupal/workbench_moderation": "^1.7",
        "drush/drush": "^11.0",
        "vlucas/phpdotenv": "^5.1",
        "webflo/drupal-finder": "^1.2"
    },
    "require-dev": {
        "drupal/core-dev": "^9.4"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "discard-changes": true,
        "sort-packages": true,
        "platform-check": false,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/robots.txt": false,
                "[web-root]/.htaccess": false
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "273595 - Move permission \"view any unpublished content\" from Content Moderation to Node": "https://www.drupal.org/files/issues/2021-03-25/273595-170.patch"
            },
            "drupal/poll": {
                "3007808 - Fine grain control over results display": "https://www.drupal.org/files/issues/2021-05-06/display_results_option--3007808-8.patch"
            }
        }
    }
}
